<!DOCTYPE html>
<html lang="en">
<head>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Blog website</title>
</head>
<body style="background-color: rgb(245, 250, 254);">
    <div class="container">
        <h1 class = "text-info text-center m-5">Research blog</h1>
        

    <% articles.forEach(articles  =>{
        var date = articles.createdAt.toLocaleDateString('en-GB');
        var datenow = "";
        if(date == (new Date).toLocaleDateString('en-GB')){
            datenow = "Today"
        }
        
        %>
        
            
       <div class="card m-5 text-center">
       
       
        
          
          <a href="/articles/<%= articles.id %>" class="text-dark" style="text-decoration: none; pointer-events:fill;">
        <div class="card-header"><%= articles.subject%></div>
        <div class="card-body">
        <h4 class="card-title"><%=articles.title%></h4>
        <p class="cart-text"><%=articles.description%></p>
        <div class="card-footer text-body-secondary">
            By <%=articles.author%>, <%=datenow
            %> <%=date%>
       </div>
    </div>
</div>
</a>

        
        
        <% 
    
    })
    %>

    <footer class="container-fluid mt-5 bg-dark">
        <div class="row fixed-bottom bg-dark text-info">
            <img src="https://thumbs.dreamstime.com/b/hand-book-logo-illustration-art-background-43965136.jpg" height="10%" class="col-1">
            <div class="col-3"><h4>Research Organization</h4>No: 1/5,<br>Spencer Plaza,<br>Velachery,<br>Chennai </div>
            <div class="col-3"><a href="/articles/new" class="btn btn-success rounded-5 mt-2">Wanted to create a Blog click here</a></div>

        </div>
        
    </footer>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/152757dfa8.js" crossorigin="anonymous"></script>
</body>
</html>